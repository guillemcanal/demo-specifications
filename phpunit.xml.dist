<phpunit
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/6.3/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         testdox="true"
         bootstrap="bootstrap.php">
    <testsuites>
        <testsuite name="Default Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
